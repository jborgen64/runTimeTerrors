
  <div class="background">
    <div class="container">
    <div class="row signs-up">
      <div class="col m6 offset-m3">
        <h2 class="white-text">Sign Up</h2>
        <form class="signup white-text">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control white-text" id="email-input" placeholder="Email">
          </div>
